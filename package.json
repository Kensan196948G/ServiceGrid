{
  "name": "itsm-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "./node_modules/.bin/vite --config config/vite.config.ts --host 0.0.0.0 --port 3001",
    "build": "tsc --project config/tsconfig.json && vite build --config config/vite.config.ts",
    "preview": "vite preview --config config/vite.config.ts",
    "lint": "tsc --noEmit --project config/tsconfig.json",
    "typecheck": "tsc --noEmit --project config/tsconfig.json",
    "serve": "vite preview --config config/vite.config.ts --port 4173",
    "test": "jest --config config/jest.config.cjs",
    "test:watch": "jest --config config/jest.config.cjs --watch",
    "test:coverage": "jest --config config/jest.config.cjs --coverage",
    "test:ci": "jest --config config/jest.config.cjs --ci --coverage --watchAll=false",
    "start:all": "./scripts/start-all.sh",
    "stop:all": "./scripts/stop-all.sh",
    "backend": "cd backend && npm start",
    "frontend": "npm run dev",
    "perf:test": "node scripts/testing/performance-test.cjs",
    "health": "curl -s http://localhost:8082/api/health"
  },
  "dependencies": {
    "@google/genai": "^1.1.0",
    "lucide-react": "^0.515.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "^6.28.0",
    "recharts": "^2.15.3"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/babel__traverse": "^7.20.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-jest": "^30.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "~5.7.2",
    "vite": "^6.2.0"
  }
}
