{
  "name": "itsm-platform",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "./node_modules/.bin/vite --config config/vite.config.ts --host 0.0.0.0 --port 3000",
    "build": "tsc --project config/tsconfig.json && vite build --config config/vite.config.ts",
    "preview": "vite preview --config config/vite.config.ts",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prettier": "./node_modules/.bin/prettier --check 'src/**/*.{ts,tsx,js,jsx}'",
    "prettier:fix": "./node_modules/.bin/prettier --write 'src/**/*.{ts,tsx,js,jsx}'",
    "typecheck": "tsc --project config/tsconfig.json --noEmit",
    "code-quality": "npm run lint && npm run prettier && npm run typecheck",
    "code-quality:fix": "npm run lint:fix && npm run prettier:fix",
    "serve": "vite preview --config config/vite.config.ts --port 4173",
    "test": "echo 'Test: SKIPPED - Direct React development mode'",
    "test:watch": "jest --config config/jest.config.cjs --watch",
    "test:coverage": "jest --config config/jest.config.cjs --coverage",
    "test:ci": "jest --config config/jest.config.cjs --ci --coverage --watchAll=false",
    "start:all": "./scripts/start-all.sh",
    "stop:all": "./scripts/stop-all.sh",
    "backend": "cd backend && npm start",
    "frontend": "npm run dev",
    "perf:test": "node scripts/testing/performance-test.cjs",
    "health": "curl -s http://localhost:8082/api/health"
  },
  "dependencies": {
    "@google/genai": "^1.1.0",
    "axios": "^1.7.2",
    "lucide-react": "^0.515.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "recharts": "^2.15.3"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/babel__traverse": "^7.20.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "^30.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.7.2",
    "vite": "^6.2.0"
  }
}
